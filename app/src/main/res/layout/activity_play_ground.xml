<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_color"
    android:fillViewport="true"
    tools:context=".ui.PlayGround">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Game Status Header -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="@drawable/rounded_card_background"
            android:layout_marginBottom="16dp">

            <!-- Current Round Info -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="center"
                android:layout_marginLeft="125sp">

                <TextView
                    android:id="@+id/tv_current_round"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Round 1"
                    android:textColor="@color/text_primary"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:padding="3dp"/>

                <TextView
                    android:id="@+id/tv_total_rounds"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black"
                    android:textSize="12sp"
                    tools:text="of 5" />

            </LinearLayout>



            <!-- Super Power Indicator -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="center">





            </LinearLayout>

        </LinearLayout>

        <!-- Players Score Section -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="@drawable/rounded_card_background"
            android:padding="10dp"
            android:layout_marginBottom="20dp">

            <!-- Player 1 Score -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="center">

                <TextView
                    android:id="@+id/tv_player1_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    tools:text="Player 1"
                    android:textColor="@color/black"
                    android:textSize="16sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/tv_player1_symbol_display"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="X"
                    android:textColor="@color/player_x_color"
                    android:textSize="24sp"
                    android:textStyle="bold"
                    android:layout_marginVertical="4dp" />

                <TextView
                    android:id="@+id/tv_player1_score"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Wins: 0"
                    android:textColor="@color/text_secondary"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/tv_player1_streak"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="2dp"
                    android:text="Streak: 0"
                    android:textColor="@color/black"
                    android:textSize="12sp"
                    android:padding="6dp"/>

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/tv_player1_extra_moves"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@color/round_button"
                    android:text="Extra Moves: 0"
                    android:textColor="@color/white"
                    android:textSize="12sp"
                    android:padding="10dp"/>

            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="VS"
                android:textColor="@color/text_primary"
                android:textSize="16sp"
                android:textStyle="bold"
                android:layout_gravity="center_vertical" />

            <!-- Player 2 Score -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv_player2_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    tools:text="Player 2"
                    android:textColor="@color/black"
                    android:textSize="16sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/tv_player2_symbol_display"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginVertical="4dp"
                    android:text="O"
                    android:textColor="@color/player_o_color"
                    android:textSize="24sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/tv_player2_score"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Wins: 0"
                    android:textColor="@color/text_secondary"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/tv_player2_streak"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="2dp"
                    android:text="Streak: 0"
                    android:textColor="@color/black"
                    android:textSize="12sp"
                    android:padding="6dp"/>

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/tv_player2_extra_moves"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@color/round_button"
                    android:text="Extra Moves: 0"
                    android:textColor="@color/white"
                    android:textSize="12sp"
                    android:padding="10dp"/>

            </LinearLayout>

        </LinearLayout>

        <!-- Current Turn Indicator -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:background="@drawable/rounded_card_background"
            android:padding="8dp"
            android:layout_marginBottom="20dp">

            <TextView
                android:id="@+id/tv_current_turn_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Current Turn: "
                android:textColor="@color/text_primary"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/tv_current_player"
                android:layout_width="wrap_content"
                android:layout_height="19dp"
                android:layout_marginStart="4dp"
                tools:text="Player 1 (X)"
                android:textColor="@color/player_x_color"
                android:textSize="16sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tv_extra_move_indicator"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=" âš¡"
                android:textColor="@color/black"
                android:textSize="18sp"
                android:visibility="gone"
                android:layout_marginStart="8dp" />

        </LinearLayout>

        <!-- Game Board -->

        <!-- Game Status Message -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            android:background="@drawable/rounded_card_background"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- Game Board Grid -->
            <GridLayout
                android:id="@+id/gl_game_board"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:columnCount="3"
                android:rowCount="3">

                <!-- Row 1 -->

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/btn_cell_0_0"
                    android:layout_width="0dp"
                    android:layout_height="100dp"
                    android:layout_row="0"
                    android:layout_column="0"
                    android:layout_columnWeight="1"
                    android:layout_margin="2dp"
                    android:background="@drawable/selected_rounds"
                    android:textColor="@color/text_primary"
                    android:textSize="36sp"
                    android:textStyle="bold" />

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/btn_cell_0_1"
                    android:layout_width="0dp"
                    android:layout_height="100dp"
                    android:layout_columnWeight="1"
                    android:layout_margin="2dp"
                    android:background="@drawable/selected_rounds"
                    android:textColor="@color/text_primary"
                    android:textSize="36sp"
                    android:textStyle="bold" />

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/btn_cell_0_2"
                    android:layout_width="0dp"
                    android:layout_height="100dp"
                    android:layout_columnWeight="1"
                    android:layout_margin="2dp"
                    android:background="@drawable/selected_rounds"
                    android:textColor="@color/text_primary"
                    android:textSize="36sp"
                    android:textStyle="bold" />

                <!-- Row 2 -->
                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/btn_cell_1_0"
                    android:layout_width="0dp"
                    android:layout_height="100dp"
                    android:layout_columnWeight="1"
                    android:layout_margin="2dp"
                    android:background="@drawable/selected_rounds"
                    android:textColor="@color/text_primary"
                    android:textSize="36sp"
                    android:textStyle="bold" />

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/btn_cell_1_1"
                    android:layout_width="0dp"
                    android:layout_height="100dp"
                    android:layout_columnWeight="1"
                    android:layout_margin="2dp"
                    android:background="@drawable/selected_rounds"
                    android:textColor="@color/text_primary"
                    android:textSize="36sp"
                    android:textStyle="bold" />

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/btn_cell_1_2"
                    android:layout_width="0dp"
                    android:layout_height="100dp"
                    android:layout_columnWeight="1"
                    android:layout_margin="2dp"
                    android:background="@drawable/selected_rounds"
                    android:textColor="@color/text_primary"
                    android:textSize="36sp"
                    android:textStyle="bold" />

                <!-- Row 3 -->
                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/btn_cell_2_0"
                    android:layout_width="0dp"
                    android:layout_height="100dp"
                    android:layout_columnWeight="1"
                    android:layout_margin="2dp"
                    android:background="@drawable/selected_rounds"
                    android:textColor="@color/text_primary"
                    android:textSize="36sp"
                    android:textStyle="bold" />

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/btn_cell_2_1"
                    android:layout_width="0dp"
                    android:layout_height="100dp"
                    android:layout_columnWeight="1"
                    android:layout_margin="2dp"
                    android:background="@drawable/selected_rounds"
                    android:textColor="@color/text_primary"
                    android:textSize="36sp"
                    android:textStyle="bold" />

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/btn_cell_2_2"
                    android:layout_width="0dp"
                    android:layout_height="100dp"
                    android:layout_columnWeight="1"
                    android:layout_margin="2dp"
                    android:background="@drawable/selected_rounds"
                    android:textColor="@color/text_primary"
                    android:textSize="36sp"
                    android:textStyle="bold" />

            </GridLayout>

        </LinearLayout>




        <!-- Game Control Buttons -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="16dp">


            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btn_next_round"
                android:layout_width="347dp"
                android:layout_height="match_parent"
                android:layout_marginStart="8dp"
                android:layout_weight="1"
                android:background="@color/yellow"
                android:text="NEXT ROUND"
                android:textColor="@color/text_primary"
                android:textSize="12sp"
                android:textStyle="bold"
                android:visibility="visible" />

            <!-- Reset Round Button -->


        </LinearLayout>


    </LinearLayout>

</LinearLayout>