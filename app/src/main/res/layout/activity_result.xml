<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/background_color"
    android:padding="20dp">



    <!-- Title -->
    <ImageView
        android:id="@+id/iv_game_icon"
        android:layout_width="wrap_content"
        android:layout_height="112dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="40dp"

        android:contentDescription="Tic Tac Toe Game Icon"
        android:src="@drawable/images2" />

    <!-- Result Card -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@color/yellow"
        android:padding="30dp"
        android:layout_marginHorizontal="20dp"
        android:elevation="8dp">

        <!-- Winner Icon/Trophy -->

        <!-- Tournament Complete Message -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text="TOURNAMENT COMPLETE!"
            android:textColor="#6A4C93"
            android:textSize="20sp"
            android:textStyle="bold"
            android:layout_marginBottom="15dp" />

        <!-- Winner Message -->
        <TextView
            android:id="@+id/tournament_winner"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text="Player 1 Wins Tournament!"
            android:textColor="#2D2D2D"
            android:textSize="20sp"
            android:textStyle="bold"
            android:layout_marginBottom="10dp" />

        <!-- Player Names Display -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginVertical="20dp"
            android:gravity="center">

            <!-- Player 1 Info -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="center">

                <TextView
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:text="X"
                    android:textColor="#FF6B6B"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:gravity="center"
                    android:background="@color/yellow" />

                <TextView
                    android:id="@+id/player1_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Player 1"
                    android:textColor="#666666"
                    android:textSize="16sp"
                    android:layout_marginTop="8dp" />

            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="VS"
                android:textColor="#999999"
                android:textSize="18sp"
                android:textStyle="bold"
                android:layout_marginHorizontal="20dp" />

            <!-- Player 2 Info -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="center">

                <TextView
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:text="O"
                    android:textColor="#4ECDC4"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:gravity="center"
                    android:background="@color/yellow" />

                <TextView
                    android:id="@+id/player2_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Player 2"
                    android:textColor="#666666"
                    android:textSize="16sp"
                    android:layout_marginTop="8dp" />

            </LinearLayout>

        </LinearLayout>

        <!-- Final Score Display -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginVertical="20dp"
            android:gravity="center"
            android:background="@color/yellow"
            android:padding="20dp">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="center">

                <TextView
                    android:id="@+id/player1_final_score"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="3"
                    android:textColor="@color/player_x_color"
                    android:textSize="36sp"
                    android:textStyle="bold" />



            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="-"
                android:textColor="#999999"
                android:textSize="32sp"
                android:textStyle="bold"
                android:layout_marginHorizontal="30dp" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="center">

                <TextView
                    android:id="@+id/player2_final_score"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="2"
                    android:textColor="@color/player_o_color"
                    android:textSize="36sp"
                    android:textStyle="bold" />



            </LinearLayout>

        </LinearLayout>

        <!-- Tournament Summary -->
        <TextView
            android:id="@+id/tournament_summary"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text="Best of 5 Tournament"
            android:textColor="#999999"
            android:textSize="16sp"
            android:layout_marginBottom="20dp" />

    </LinearLayout>

    <!-- Action Buttons -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="40dp"
        android:layout_marginHorizontal="20dp">

        <!-- New Tournament Button -->
        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/new_tournament_btn"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:text="NEW TOURNAMENT"
            android:textColor="#FFFFFF"
            android:textSize="18sp"
            android:textStyle="bold"
            android:background="@color/yellow"
            android:layout_marginBottom="15dp"
            android:elevation="4dp" />



    </LinearLayout>

    <!-- Spacer for bottom -->
    <View
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" />

</LinearLayout>